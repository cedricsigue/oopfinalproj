<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<Pane prefHeight="808.0" prefWidth="1358.0" style="-fx-background-color: #2B2B2B;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.RentalFormController">
    <children>
        <VBox alignment="CENTER" layoutX="440.0" layoutY="166.0" prefHeight="500.0" prefWidth="400.0" spacing="20.0">
            <children>
                <Label text="Rental Form" textFill="#FFFFFF">
                    <font>
                        <Font name="System Bold" size="32.0" />
                    </font>
                </Label>
              <Label fx:id="carLabel" prefHeight="36.0" prefWidth="458.0" text="Car Label:" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="12.0" />
                  </font>
              </Label>
                
                <VBox spacing="5">
                    <Label text="Name" textFill="#E0E0E0">
                        <font>
                            <Font name="System Bold" size="14.0" />
                        </font>
                    </Label>
                    <TextField fx:id="nameField" prefHeight="40.0" prefWidth="300.0" promptText="Enter your name" style="-fx-background-color: #3B3B3B; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 5;" />
                </VBox>
                
                <VBox spacing="5">
                    <Label text="Contact Number" textFill="#E0E0E0">
                        <font>
                            <Font name="System Bold" size="14.0" />
                        </font>
                    </Label>
                    <TextField fx:id="contactField" prefHeight="40.0" prefWidth="300.0" promptText="Enter your contact number" style="-fx-background-color: #3B3B3B; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 5;" />
                </VBox>
                
                <VBox spacing="5">
                    <Label text="Rental Date" textFill="#E0E0E0">
                        <font>
                            <Font name="System Bold" size="14.0" />
                        </font>
                    </Label>
                    <DatePicker fx:id="rentalDatePicker" prefHeight="40.0" prefWidth="300.0" style="-fx-background-color: #3B3B3B; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 5;" />
                </VBox>
                
                <VBox spacing="5">
                    <Label text="Return Date" textFill="#E0E0E0">
                        <font>
                            <Font name="System Bold" size="14.0" />
                        </font>
                    </Label>
                    <DatePicker fx:id="returnDatePicker" prefHeight="40.0" prefWidth="300.0" style="-fx-background-color: #3B3B3B; -fx-text-fill: white; -fx-font-size: 14px; -fx-background-radius: 5;" />
                </VBox>
                
                <HBox alignment="CENTER" spacing="20">
                    <Button fx:id="backButton" onAction="#handleBack" prefHeight="40.0" prefWidth="140.0" style="-fx-background-color: #666666; -fx-text-fill: white; -fx-font-size: 16px; -fx-background-radius: 5; -fx-cursor: hand;" text="Go Back" />
                    <Button fx:id="proceedButton" onAction="#handleProceed" prefHeight="40.0" prefWidth="140.0" style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-font-size: 16px; -fx-background-radius: 5; -fx-cursor: hand;" text="Proceed" />
                </HBox>
            </children>
        </VBox>
    </children>
</Pane>
