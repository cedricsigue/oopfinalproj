<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.RentalFormController"
      alignment="CENTER" spacing="15" prefWidth="600" prefHeight="500"
      style="-fx-padding: 30;">
    
    <Label fx:id="carLabel" style="-fx-font-size: 22;" />

    <TextField fx:id="nameField" promptText="Enter your full name" prefWidth="300" />
    <TextField fx:id="contactField" promptText="Enter your contact number" prefWidth="300" />
    <DatePicker fx:id="rentalDatePicker" promptText="Select rental date" prefWidth="300" />

    <Button text="Proceed to Confirmation" onAction="#handleProceed" />
</VBox>
