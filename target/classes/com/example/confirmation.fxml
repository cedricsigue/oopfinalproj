<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.Pane?>

<Pane prefHeight="400.0" prefWidth="600.0" fx:controller="com.example.ConfirmationController"
      xmlns:fx="http://javafx.com/fxml/1">

    <children>
        <Label fx:id="summaryLabel" layoutX="30" layoutY="30"
               style="-fx-font-size: 16px; -fx-text-fill: black;" wrapText="true" prefWidth="540" />
        <Label fx:id="thankYouLabel" layoutX="200" layoutY="240"
               style="-fx-font-size: 18px; -fx-text-fill: green;" />
        <Button text="Confirm Rental" layoutX="230" layoutY="300" onAction="#confirmRental" />
    </children>
</Pane>
